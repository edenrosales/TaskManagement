<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:padding="6dip" >


    <TextView
        android:id="@+id/task_list_description"
        android:layout_width="202dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="203dp"
        android:layout_marginBottom="41dp"
        android:layout_toStartOf="@+id/task_list_end"
        android:maxLines="4"
        android:text="Description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/task_list_name"
        android:layout_width="204dp"
        android:layout_height="16dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/task_list_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="201dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/task_list_start"
        android:gravity="center_vertical"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/task_list_start"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="49dp"
        android:maxLines="1"
        android:text="Start Time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/task_list_end"
        android:layout_width="138dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="64dp"
        android:maxLines="1"
        android:text="End Time"
        android:textSize="12sp" />

</RelativeLayout>